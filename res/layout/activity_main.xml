<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark"
    android:colorBackground="#000000"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/VenueName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="35sp" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/VenueName"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="false"
        android:textColor="#fff" />

    <Button
        android:id="@+id/Button_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:height="60dp"
        android:maxHeight="40px"
        android:onClick="onDescription"
        android:text="Beschr."
        android:textSize="30sp"
        android:visibility="gone"
        android:width="150dp" />

    <Button
        android:id="@+id/Button_Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:height="60dp"
        android:maxHeight="40px"
        android:onClick="onDescription"
        android:text="Next"
        android:textSize="35sp"
        android:visibility="gone"
        android:width="150dp" />

    <Button
        android:id="@+id/Button_OpenUntil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Button_Description"
        android:layout_alignLeft="@+id/Button_Description"
        android:height="60dp"
        android:maxHeight="40px"
        android:onClick="onDescription"
        android:text="GeÃ¶ffnet bis"
        android:textSize="20sp"
        android:visibility="gone"
        android:width="150dp" />

    <Button
        android:id="@+id/Button_StopTalking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Button_Next"
        android:layout_alignLeft="@+id/Button_Next"
        android:height="60dp"
        android:maxHeight="40px"
        android:onClick="onDescription"
        android:text="Stop"
        android:textSize="35sp"
        android:visibility="gone"
        android:width="150dp" />

    <Button
        android:id="@+id/Button_UpdateDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Button_StopTalking"
        android:layout_alignLeft="@+id/Button_Description"
        android:height="60dp"
        android:maxHeight="40px"
        android:onClick="onUpdateDB"
        android:text="DB Aktualisieren"
        android:textSize="14sp"
        android:visibility="gone"
        android:width="150dp" />

</RelativeLayout>